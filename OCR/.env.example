# Entorno de Flask (development | production)
FLASK_ENV=development

# Host y puerto que usará la app
HOST=127.0.0.1
PORT=5000

# Ruta al tessdata (ejemplo/mocker; en producción define la ruta real en el entorno)
TESSDATA_PREFIX=/path/to/tessdata

# Tamaño máximo de subida en bytes (ej: 50MB)
MAX_CONTENT_LENGTH=52428800

# Orígenes CORS permitidos (coma-separados). Reemplazar por dominios reales en producción.
CORS_ORIGINS=http://localhost:5173,https://example.com